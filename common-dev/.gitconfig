[commit]
    gpgsign = true

[gpg]
    program = gpg2

[url "git@github.com:"]
    insteadOf = https://github.com/

[url "git@gitlab.com:"]
    insteadOf = https://gitlab.com/

[core]
    autocrlf = input
    compression = 9
    editor = nano
    pager = less -RS

[alias]
    bed = branch --edit-description
    ca = commit --amend -v
    cleanall = clean -fdx  # dangerous!!
    dt = difftool
    dtc = difftool --cached
    pullrb = pull --rebase
    root = rev-parse --show-toplevel
    show = show --format=fuller --show-signature
    shows = show --format=fuller --stat
    versions = tag -l --sort=version:refname

[apply]
    whitespace = fix

[diff]
    renames = copies
    tool = meld

[merge]
    log = true
    tool = meld

[push]
    default = current
    followTags = true

[color]
    ui = auto

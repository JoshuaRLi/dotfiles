[colors]
bg = ${xrdb:color0}
fg = ${xrdb:color15}

[bar/bar]
bottom = true
wm-restack = bspwm
width = 100%
height = 28
radius = 0
bg = ${colors.bg}
fg = ${colors.fg}
font-0 = "Hack:size=10;2"
modules-left = bspwm
tray-position = left
tray-detached = true
tray-offset-x = 124
tray-offset-y = -1
modules-right = network memory cpu battery date

[module/bspwm]
type = internal/bspwm
label-empty = %index%
label-empty-foreground = ${colors.fg}
label-focused = %index%
label-focused-foreground = ${colors.fg}
label-focused-background = ${colors.fg}
label-occupied = %index%
label-occupied-foreground = ${colors.fg}
label-occupied-background = ${colors.bg}
label-urgent = %index%
label-urgent-foreground = #ffffff
label-urgent-background = #ff0000
label-empty-padding = 1
label-focused-padding = 1
label-occupied-padding = 1
label-urgent-padding = 1

[module/cpu]
type = internal/cpu
interval = 2
label = cpu %percentage%
label-foreground = ${colors.fg}
format-padding = 1

[module/memory]
type = internal/memory
interval = 2
label = mem %percentage_used%
label-foreground = ${colors.fg}
format-padding = 1

[module/network]
type = internal/network
interface = wlan0
interval = 15
label-connected = ap %essid%
label-disconnected = d/c
label-connected-foreground = ${colors.fg}
label-diconnected-foreground = ${colors.fg}
format-connected-padding = 1
format-disconnected-padding = 1

[module/date]
type = internal/date
interval = 60
date = %m/%d %H:%M
label = %date%
label-foreground = ${colors.fg}
format-padding = 1

[module/battery]
type = internal/battery
adapter = AC
battery = BAT0
label-charging = bat+ %percentage%
label-discharging = bat- %percentage%
full-at = 99
label-full = bat 100
label-charging-foreground = ${colors.fg}
label-discharging-foreground = ${colors.fg}
label-full-foreground = ${colors.fg}
format-charging-padding = 1
format-discharging-padding = 1
format-full-padding = 1

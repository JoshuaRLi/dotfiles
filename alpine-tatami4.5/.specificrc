#!/usr/bin/env mksh

alias aa='apk add'
alias aaup='apk update && apk add --upgrade'
alias ad='apk del'
alias ai='apk info -a'
alias aii='apk -vv info|sort'
alias au='apk update'
alias aup='apk update && apk upgrade'
alias ast='apk stats'
alias agrep='apk search -v'
alias agrepd='apk search -v --description'


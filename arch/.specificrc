#!/usr/bin/env bash

# TODO move to an actively maintained AUR helper in the future
alias pacs='pacaur -Ss'
alias pachk='pacaur -Qi'
alias pacu='sudo pacman -Sy'
alias pacuk='sudo pacman-key --refresh-keys'
alias pacch='checkupdates ; pacaur -k'
alias pacup='pacaur --noedit --noconfirm -Syu'
alias paci='pacaur --noedit -S'
alias pacrm='pacaur -Rs'
alias pacclean='sudo pacman -Rns $(pacman -Qtdq)'

alias imgv='sxiv -t -r'
alias snvm='source /usr/share/nvm/init-nvm.sh'

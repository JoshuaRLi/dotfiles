[gpg]
    program = gpg2

[url "git@github.com:"]
    insteadOf = https://github.com/

[url "git@gitlab.com:"]
    insteadOf = https://gitlab.com/

[core]
    autocrlf = input
    compression = 9

[alias]
    ca = commit --amend -v
    dt = difftool
    dtc = difftool --cached
    root = rev-parse --show-toplevel
    info = show --format=fuller --show-signature
    stat = show --format=fuller --show-signature --stat
    unstage = reset --
    resign = rebase --exec 'git commit --amend --no-edit -n -S' -i

[apply]
    whitespace = fix

[diff]
    renames = copies
    tool = meld

[merge]
    log = true
    tool = meld

[push]
    default = current
    followTags = true

[color]
    ui = auto
    status = always
    diff = always

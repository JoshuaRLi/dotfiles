[core]
    autocrlf = input
    compression = 9

[alias]
    amend = commit --amend -v
    b = blame -c --date=short
    c = checkout
    d = ydiff -s
    dc = ydiff -s --cached
    clear = checkout -- .
    root = rev-parse --show-toplevel
    info = show --format=fuller --show-signature
    stat = show --format=fuller --show-signature --stat
    unstage = reset --

[push]
    default = current
    followTags = false

[branch]
    autoSetupMerge = always

[color]
    status = always
    diff = never  # disable colors for ydiff -s and patch generation

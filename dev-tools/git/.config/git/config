[url "git@github.com:"]
    insteadOf = https://github.com/

[url "git@gitlab.com:"]
    insteadOf = https://gitlab.com/

[core]
    autocrlf = input
    compression = 9

[alias]
    amend = commit --amend -v
    b = blame -c --date=short
    c = checkout
    clear = checkout -- .
    root = rev-parse --show-toplevel
    info = show --format=fuller --show-signature
    stat = show --format=fuller --show-signature --stat
    unstage = reset --

[push]
    default = current
    followTags = false

[branch]
    autoSetupMerge = always

[color]
    ui = auto
    status = always
    diff = always

[diff]
    tool = icdiff

[difftool]
    prompt = false

[difftool "icdiff"]
    cmd = icdiff --line-numbers $LOCAL $REMOTE

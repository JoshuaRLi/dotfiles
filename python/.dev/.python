export PYENV_ROOT="${HOME}/.pyenv"
pathprepend "${PYENV_ROOT}/bin"
eval "$(pyenv init -)"

usep () {
    pyenv global "$1" && \
    printf "$(python -c 'import sys; print("Switched to", sys.executable)')\n"
}

alias p='python'
alias pip='python -m pip'
alias mkvenv='virtualenv -p $(pyenv which python3)'
alias pe='pipenv install --dev ; pipenv check ; pipenv shell'

export PATH

export PYTHONSTARTUP="${HOME}/.pythonrc"

if command -v pyenv > /dev/null 2>&1; then
    export PYENV_ROOT="${HOME}/.pyenv"
    pathprepend "${PYENV_ROOT}/bin"
    eval "$(pyenv init -)"
    usep () {
        pyenv global "$1" && \
        printf "$(python -c 'import sys; print("Switched to", sys.executable)')\n"
    }
else
    printf 'WARNING (dev dotfiles): pyenv not found.\n'
fi

# these aliases are more like reminders that are nice to have around.
alias p='python'
alias pip='python -m pip'
alias mkvenv='virtualenv -p $(pyenv which python3)'
alias pe='pipenv install --dev ; pipenv check ; pipenv shell'

export PATH

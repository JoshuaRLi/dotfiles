import os
import atexit
import readline

PYHISTORY_PATH = os.path.expanduser("~/.pyhistory")

def save_history(histfile=PYHISTORY_PATH):
    import readline
    readline.write_history_file(histfile)

atexit.register(save_history)

if os.path.exists(PYHISTORY_PATH):
    readline.read_history_file(PYHISTORY_PATH)

del os, atexit, readline, save_history, PYHISTORY_PATH

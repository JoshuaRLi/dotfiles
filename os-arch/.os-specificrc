alias pacup='yay -Sy --noconfirm pacman yay && yay'
alias paci='yay --needed -S'
alias pacii='yay --noconfirm --needed -S'
alias pacrm='yay -Rs'
alias pacclean='yay -Yc'
# alias pacclean='sudo pacman -Rns $(pacman -Qtdq)'

alias pacs='yay --sortby popularity'  # better than pacman -Ss
pacfiles () { yay -Fl "$1" | less ; }
pacwhich () { yay -Qo "$(which "$1")" ; }
alias pacinfo='yay -Si'
alias pacstats='yay -Ps'

super + Escape
    pkill -USR1 -x sxhkd ;\
    notify-send "[sxhkd] config reloaded" -t 1 ;\
    sh "${HOME}/.config/bspwm/bspwmrc" ;\
    notify-send "[bspwm] config reloaded" -t 1

#
# SHORTCUTS
#

ctrl + Return
    urxvt

super + Return
    urxvtc -e "ranger"

# suspend
ctrl + alt + Delete
    exec pm-suspend

# lock then suspend
# TODO physlock: physlock -sdp 'This computer is locked.'
ctrl + shift + l
    exec pm-suspend

alt + Return
    . "${HOME}/.cache/wal/colors.sh" && \
    dmenu_run -b -fn 'lucy tewi' -nb "$color0" -nf "$color15" -sb "$color1" -sf "$color15"

Print
    scrot "${HOME}/"$(date +%Y-%m-%d-%H-%M-%S)".png" -q 100 && \
        notify-send "[scrot] Screenshot saved." -t 1

shift + Print
    scrot -s "${HOME}/"$(date +%Y-%m-%d-%H-%M-%S)".png" -q 100 && \
        notify-send "[scrot] Screenshot selection saved." -t 1

alt + Print
    scrot -s -q 100 -e 'xclip $f && rm $f' && \
        notify-send "[scrot] Screenshot selection saved to xclip buffer." -t 1

XF86AudioMute
    amixer set Master toggle

XF86Audio{LowerVolume,RaiseVolume}
    amixer set Master 5%{-,+}


#
# BSPWM
#

# close or kill
super + {c,k}
    bspc node -{c,k}

# toggle tiled / monocle layout
super + m
    bspc desktop -l next

# toggle node between floating and tiled
super + {f,t}
    bspc node -t {floating,tiled}

# cycle through nodes, useful during monocle layout
ctrl + shift + Return
    bspc node -f next

# cycle through desktops
alt + {_,shift +} Tab
    bspc desktop -f {next,prev}

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# adjust window gap via mouse wheel
super + button{4,5}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 5))

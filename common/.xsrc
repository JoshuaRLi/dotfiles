# graphical/X specific configs

copy () {
    xclip -i -sel clipboard "$1"
}

alias ssel='maim -s | xclip -selection clipboard -t image/png'
alias imgv='sxiv -tp'

# list fontconfig fonts (for XLFD, use xfontsel or xlsfonts)
alias fonts='fc-list | cut -f2 -d: | sort -u'

# see also .commonaliases for audio
alias vp='mpv -ao alsa --profile=vid-hq'

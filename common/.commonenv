#!/usr/bin/env sh

export LANG='en_US.UTF-8'
export LANGUAGE='en_US.UTF-8'
export PAGER='less'
export LESS='-irS'

if command -v micro > /dev/null 2>&1; then
    export EDITOR='micro'
else
    export EDITOR='nano'
fi

export GIT_EDITOR="$EDITOR"
export GIT_PAGER="$PAGER"

pathprepend() {
  for DIR in "$@"
  do
    if [[ -d "$DIR" ]] && [[ ":${PATH}:" != *":${DIR}:"* ]]; then
      PATH="${DIR}${PATH:+":$PATH"}"
    fi
  done
}

export GPG_TTY="$(tty)"
export GOPATH="${HOME}/.go"

pathprepend "/bin"
pathprepend "/sbin"
pathprepend "/usr/bin"
pathprepend "/usr/sbin"
pathprepend "/usr/local/bin"
pathprepend "/usr/local/sbin"
pathprepend "${HOME}/bin"
pathprepend "${HOME}/bin/custom"            # github.com:JoshuaRLi/bin
pathprepend "${HOME}/.local/bin"            # pip --user installed executables
pathprepend "${HOME}/.cargo/bin"            # cargo (rust) installed executables
pathprepend "${GOPATH}/bin"                 # go workspace binaries
pathprepend "${HOME}/.gem/ruby/2.5.0/bin"   # gem binaries
export PATH

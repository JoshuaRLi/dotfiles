#!/usr/bin/env sh

export LANG='en_US.UTF-8'
export LANGUAGE='en_US.UTF-8'
export PAGER='less'
export LESS='-irS'
export GPG_TTY="$(tty)"
# TODO shell and term

if command -v micro > /dev/null 2>&1; then
    export EDITOR='micro'
else
    export EDITOR='nano'
fi

export GIT_EDITOR="$EDITOR"
export GIT_PAGER="$PAGER"

pathprepend() {
  for DIR in "$@"
  do
    if [[ -d "$DIR" ]] && [[ ":${PATH}:" != *":${DIR}:"* ]]; then
      PATH="${DIR}${PATH:+":$PATH"}"
    fi
  done
}

pathprepend "/bin"
pathprepend "/sbin"
pathprepend "/usr/bin"
pathprepend "/usr/sbin"
pathprepend "/usr/local/bin"
pathprepend "/usr/local/sbin"
pathprepend "${HOME}/bin"
pathprepend "${HOME}/bin/custom"  # github.com:JoshuaRLi/bin

export PATH

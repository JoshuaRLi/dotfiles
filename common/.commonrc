#!/usr/bin/env sh

ssource () {
    [ -f "$1" ] && . "$1"
}

ssource "${HOME}/.commonenv"
ssource "${HOME}/.commonaliases"
ssource "${HOME}/.commonfunc"

# dev environments
for f in "${HOME}/.dev/".*; do
    ssource "$f"
done

if xhost > /dev/null 2>&1; then
    ssource "${HOME}/.xsrc"
fi

ssource "${HOME}/.specificrc"

unset -f ssource

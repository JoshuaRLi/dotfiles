root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.md]
trim_trailing_whitespace = false

[*.{html,css,js}]
indent_size = 2

[{package.json,.travis.yml}]
indent_size = 2

[*.c]
indent_style = tab

[Makefile]
indent_style = tab

[LICENSE]
insert_final_newline = false

super + Escape
    pkill -USR1 -x sxhkd ;\
    notify-send "[sxhkd] config reloaded" -t 1 ;\
    sh "${HOME}/.config/bspwm/bspwmrc" ;\
    notify-send "[bspwm] config reloaded" -t 1

#
# SHORTCUTS
#

ctrl + Return
    urxvt

super + Return
    urxvtc -e "ranger"

ctrl + shift + l
    physlock -sdp 'This computer is locked.'

# TODO suspend with openrc
ctrl + alt + Delete
    false

alt + Return
    . "${HOME}/.cache/wal/colors.sh" && \
    dmenu_run -nb "$color0" -nf "$color15" -sb "$color1" -sf "$color15"

Print
    mkdir -p "${HOME}/Screenshots" && \
    maim "${HOME}/Screenshots/"$(date +%Y-%m-%d-%H-%M-%S)".png" --quality 5 && \
        notify-send "[maim] Screenshot saved." -t 1

shift + Print
    mkdir -p "${HOME}/Screenshots" && \
    maim -s "${HOME}/Screenshots/"$(date +%Y-%m-%d-%H-%M-%S)".png" --quality 10 && \
        notify-send "[maim] Screenshot selection saved." -t 1

alt + Print
    maim -s --quality 10 | xclip -selection clipboard -t image/png && \
        notify-send "[maim] Screenshot selection saved to clipboard buffer." -t 1

XF86AudioMute
    # note: to only toggle pulseaudio, pass -D pulse
    amixer set Master toggle

XF86Audio{LowerVolume,RaiseVolume}
    amixer set Master 5%{-,+}

XF86MonBrightness{Down,Up}
    light -{U,A} 10
    # xbacklight -{dec,inc} 10


#
# BSPWM
#

# close or kill
super + {c,k}
    bspc node -{c,k}

# toggle tiled / monocle layout
super + m
    bspc desktop -l next

# toggle node between floating and tiled
super + {f,t}
    bspc node -t {floating,tiled}

# cycle through nodes, useful during monocle layout
ctrl + shift + Return
    bspc node -f next

# cycle through desktops
alt + {_,shift +} Tab
    bspc desktop -f {next,prev}

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# adjust window gap via mouse wheel
super + button{4,5}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 5))

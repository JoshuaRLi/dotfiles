# source this file to apply all my dotfiles/configs for configuring a shell.

# lib defines some useful df_* routines used by the rest of these files
. "${HOME}/.config/dotfiles/base/lib"

. "${HOME}/.config/dotfiles/base/env"
. "${HOME}/.config/dotfiles/base/aliases"
. "${HOME}/.config/dotfiles/base/functions"

# dev environments
for f in "${HOME}/.config/dotfiles/dev/"*; do
    . "$f"
done

# other dev tooling checks
df_require tmuxp || df_warn 'tmuxp not found'

if xhost > /dev/null 2>&1; then
    . "${HOME}/.config/dotfiles/base/x"
fi

. "${HOME}/.config/dotfiles/base/specific"

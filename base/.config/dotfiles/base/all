# source this file to apply all my dotfiles/configs for configuring a shell.

# lib defines some useful df_* routines used by the rest of these files
source "${XDG_CONFIG_HOME}/dotfiles/base/lib"

source "${XDG_CONFIG_HOME}/dotfiles/base/env"
source "${XDG_CONFIG_HOME}/dotfiles/base/aliases"
source "${XDG_CONFIG_HOME}/dotfiles/base/functions"

# dev environments
for f in "${XDG_CONFIG_HOME}/dotfiles/dev/"*; do
    source "$f"
done

# other dev tooling checks
df_require tmuxp || df_warn 'tmuxp not found'

if xhost > /dev/null 2>&1; then
    source "${XDG_CONFIG_HOME}/dotfiles/base/x"
fi

source "${XDG_CONFIG_HOME}/dotfiles/base/specific"
source "${XDG_CONFIG_HOME}/dotfiles/rice"
